<% include ./partials/header %>
<div class="container">
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="http://localhost:3002/hackernews">HackerNews</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item new">
              <a class="nav-link" href="http://localhost:3002/news">New <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link breakingnews" href="http://localhost:3002/breakingnews">BreakingNews</a>
            </li>
          </ul>
          
           <form class="form-inline my-2 my-lg-0">
               <div>
                   <ul class="nav navbar-nav navbar-right">
                           <% if(!currentUser){ %>
                            <li class="nav-item">
                               <a class="nav-link " href="http://localhost:3002/login">Login</a>
                            </li> 
                            <li class="nav-item">
                               <a class="nav-link " href="http://localhost:3002/signup">Signup</a>
                            </li> 
                            <% } else { %>
                            <li><a href='#'>Signed In As <%= currentUser.username %></a></li>
                            <li class="nav-item">
                            <a class="nav-link " href="http://localhost:3002/logout">Logout</a>
                            </li>
                           <% } %>
                   </ul> 
               </div>
           </form>   
        </div>
    </div>
  </nav>
</div>
